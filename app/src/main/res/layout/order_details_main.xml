<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_theme"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:layout_marginTop="@dimen/px34"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px450"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px141">

            <TextView
                android:id="@id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px55"
                android:text="张小强  先生"
                android:textColor="@color/font_black"
                android:textSize="@dimen/px44" />

            <TextView
                android:id="@id/text_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px48"
                android:text="13124578357"
                android:textColor="@color/line_blue"
                android:textSize="@dimen/px48" />

        </RelativeLayout>

        <View
            android:layout_width="@dimen/px992"
            android:layout_height="@dimen/px1"
            android:layout_gravity="center_horizontal"
            android:background="@color/line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px50"
                android:text="下单时间"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/px40" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px38"
                android:text="2017-04-08 07:13"
                android:textColor="@color/font_black"
                android:textSize="@dimen/px40" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px50"
                android:text="物品数量"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/px40" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px38"
                android:text="10件"
                android:textColor="@color/font_black"
                android:textSize="@dimen/px40" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px50"
                android:text="取件地址"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/px40" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px38"
                android:text="北京市丰台区马家堡8号院1306室"
                android:textColor="@color/font_black"
                android:textSize="@dimen/px40" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/line_gray"
        android:layout_marginTop="@dimen/px30"/>
    <com.zuoyu.laundry.widget.OrderItemView
        android:id="@+id/orderItemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>