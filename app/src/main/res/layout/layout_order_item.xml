<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px124"
    android:background="@color/white">

    <TextView
        android:id="@id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px55"
        android:text="西装上衣"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/px40" />

    <TextView
        android:id="@id/text_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px50"
        android:layout_toRightOf="@id/text_name"
        android:text="￥ 25"
        android:textColor="@color/font_orange"
        android:textSize="@dimen/px40" />


    <View
        android:layout_width="@dimen/px992"
        android:layout_height="@dimen/px1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px45">

        <ImageView
            android:id="@id/view_cut"
            android:layout_width="@dimen/px60"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_order_cut"
            android:visibility="gone"/>

        <TextView
            android:id="@id/text_count"
            android:layout_width="@dimen/px80"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/px40" />

        <ImageView
            android:id="@id/view_add"
            android:layout_width="@dimen/px60"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_order_add" />
    </LinearLayout>
</RelativeLayout>